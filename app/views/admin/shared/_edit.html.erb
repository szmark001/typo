<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @show_merge_option %>
	<h4> <%= _("Merge Articles") %> </h4>
	<%= form_tag(form_action.merge :action => 'merge') do %>
	  <%= label_tag :article_id, "Article ID" %> <br>
	  <%= text_field_tag :merge_with %> <br>
	  <%= submit_tag("Merge With This Article") %>
	<% end %>
<% end %>
